<% provide(:title, 'Tip(詳細)') %>
<div class="show">
  <div class="genre-div">
    <%= image_tag(@tip_genre.image.url, width: '3%') %>
    <span class="genre-name"><%= @tip_genre.name %></span>
  </div>
  
  <div class="tip-show-title">
    <h3><%= @tip.title %></h3>
  </div>
  
  <div class="content">
    <%= markdown(@tip.detail).html_safe %>
  </div>
  
  <div class="btns">
    <%= link_to "Remove", delete_tip_path(@tip), class: "btn btn-danger", :method => 'patch', data: {confirm: "本当に削除しますか？"} %>
    <%= link_to "Edit", edit_tip_path(@tip), class: "btn btn-warning" %>
    <%= link_to "Back", tip_genre_path(@tip_genre), class: "btn btn-default" %>
  </div>
</div>