<% provide(:title, '管理者ログイン') %>
<div class="container">
  <h1>管理者ログイン</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:admin_user, url: admin_login_login_path) do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.submit "Log in", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
